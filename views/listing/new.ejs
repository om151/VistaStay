<%- layout("/layouts/boilerplate")%>
<body>
  <br /><br />

  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create a new listing</h3>
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-lable">Title</label>
          <input
            type="text"
            name="listing[title]"
            id=""
            class="form-control"
            placeholder="Add a catchy title"
            required
          />
          <div class="valid-feedback">Title look goods</div>
          <div class="invalid-feedback">Title should be valid</div>
        </div>
        <div class="mb-3">
          <label for="decription" class="form-lable">Description</label>
          <textarea
            name="listing[description]"
            id=""
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Description should be valid</div>
        </div>

        
        <div class="mb-3">
          <label for="image" class="form-lable">Upload lisitng image</label>
          <input
            type="file"
            name="listing[image]"
            id=""
            class="form-control"
            required

          />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="Price" class="form-lable">Price</label>
            <input
              name="listing[price]"
              id=""
              class="form-control"
              placeholder="1200"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          <div class="mb-3 col-md-4">
            <label for="country" class="form-lable">Country</label>
            <input
              type="text"
              name="listing[country]"
              id=""
              class="form-control"
              required
              placeholder="India"
            />
            <div class="invalid-feedback">Country should be valid</div>
          </div>
          <div class="mb-3 col-md-4">
            <label for="category" class="form-lable">Category</label>
            <select class="form-select" aria-label="Default select example" name="listing[category]">
              <option selected>Select Category</option>
              <option value="Trending">Trending</option>
              <option value="Rooms">Rooms</option>
              <option value="Iconic-Cities">Iconic-Cities</option>
              <option value="Mountain">Mountain</option>
              <option value="Castles">Castles</option>
              <option value="Amazing-Pools">Amazing-Pools</option>
              <option value="Campings">Campings</option>
              <option value="Farms">Farms</option>
              <option value="Arctic">Arctic</option>
              <option value="Boats">Boats</option>
            </select>
            <div class="invalid-feedback">Country should be valid</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-lable">Location</label>
          <input
            type="text"
            name="listing[location]"
            required
            id=""
            class="form-control"
            placeholder="Jaipur, Rajasthan"
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add listing</button>
      </form>
    </div>
  </div>
</body>
